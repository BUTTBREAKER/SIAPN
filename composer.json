{
  "require": {
    "php": ">=8.2",
    "flightphp/core": "^3.13",
    "illuminate/container": "^11.30"
  },
  "autoload": {
    "psr-4": {
      "SIPAN\\": "app"
    }
  },
  "scripts": {
    "dev": [
      "Composer\\Config::disableProcessTimeout",
      "composer setup",
      "start php -S localhost:61001",
      "start npm run build:watch -- --environment php",
      "start http://localhost:61001"
    ],
    "build": [
      "composer i --no-dev -o",
      "composer archive"
    ],
    "setup": "php -r \"if (!file_exists('.env.php')) copy('.env.example.php', '.env.php');\""
  },
  "require-dev": {
    "symfony/var-dumper": "^7.1"
  },
  "archive": {
    "name": "SIPAN",
    "exclude": [
      ".editorconfig",
      ".env.example.php",
      ".gitignore",
      ".git",
      "composer.*",
      "db"
    ]
  }
}
